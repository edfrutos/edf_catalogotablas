[MASTER]
init-hook='import sys; sys.path.append("/Users/edefrutos/edf_catalogotablas")'

[MESSAGES CONTROL]
# Deshabilitar todas las categorías problemáticas de una vez
disable=all

# Habilitar solo los mensajes críticos que realmente importan
enable=C0111,C0112,C0113,C0114,C0115,C0116

[IMPORTS]
known-third-party=flask,pymongo,bson,psutil,werkzeug

[TYPECHECK]
# Ignorar errores de inferencia de tipos que causan problemas
ignored-modules=flask,session
ignored-classes=session