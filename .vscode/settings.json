{
    "CodeGPT.apiKey": "Claude Code",
    
    // Configuración de SpellRight para omitir archivos específicos
    "spellright.language": [
        "es",
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.parserByClass": {
        "markdown": "markdown",
        "latex": "latex",
        "plaintext": "plaintext"
    },
    "spellright.ignoreFiles": [
        "**/*.txt",
        "**/*.md",
        "**/*.log",
        "**/*.json",
        "**/*.yml",
        "**/*.yaml",
        "**/*.toml",
        "**/*.ini",
        "**/*.cfg",
        "**/*.conf",
        "**/*.sh",
        "**/*.bat",
        "**/*.ps1",
        "**/*.spec",
        "**/*.dockerignore",
        "**/*.gitignore",
        "**/requirements*.txt",
        "**/package*.json",
        "**/pyproject.toml",
        "**/.env*",
        "**/backup_*/**",
        "**/logs/**",
        "**/dist/**",
        "**/build/**",
        "**/node_modules/**",
        "**/__pycache__/**",
        "**/.venv/**",
        "**/venv/**",
        "**/.git/**"
    ],
    
    // Configuración de Python para evitar errores falsos
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": false,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "./typings",
    "python.analysis.extraPaths": [
        "./app",
        "./tools",
        "./scripts"
    ],
    
    // Configuración de archivos a ignorar para linting
    "python.linting.ignorePatterns": [
        "**/backup_*/**",
        "**/logs/**",
        "**/dist/**",
        "**/build/**",
        "**/node_modules/**",
        "**/__pycache__/**",
        "**/.venv/**",
        "**/venv/**",
        "**/*.txt",
        "**/*.md",
        "**/*.log",
        "**/*.json",
        "**/*.spec",
        "**/*.dmg",
        "**/*.icns",
        "**/test_*.py",
        "**/debug_*.py",
        "**/check_*.py",
        "**/fix_*.py",
        "**/create_*.py",
        "**/update_*.py",
        "**/verify_*.py",
        "**/diagnose_*.py",
        "**/simulate_*.py",
        "**/recreate_*.py",
        "**/launcher_*.py",
        "**/setup_*.py",
        "**/load_*.py",
        "**/start_*.py",
        "**/run_*.py"
    ],
    
    // Configuración de archivos a excluir del workspace
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.coverage": true,
        "**/htmlcov": true,
        "**/.tox": true,
        "**/dist": true,
        "**/build": true,
        "**/*.egg-info": true,
        "**/.venv": true,
        "**/venv": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/backup_*": true,
        "**/*.log": true,
        "**/*.log.*": true,
        "**/*.pid": true,
        "**/*.tmp": true,
        "**/*.bak": true,
        "**/*.backup": true,
        "**/*.dmg": true,
        "**/*.spec": true,
        "**/edf_developer.iconset": true
    },
    
    // Configuración de búsqueda para excluir archivos
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.venv": true,
        "**/venv": true,
        "**/dist": true,
        "**/build": true,
        "**/backup_*": true,
        "**/logs": true,
        "**/*.log": true,
        "**/*.log.*": true,
        "**/*.dmg": true,
        "**/*.spec": true,
        "**/*.icns": true,
        "**/edf_developer.iconset": true
    },
    
    // Configuración de archivos a ignorar para el watcher
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/__pycache__/**": true,
        "**/.venv/**": true,
        "**/venv/**": true,
        "**/dist/**": true,
        "**/build/**": true,
        "**/backup_*/**": true,
        "**/logs/**": true,
        "**/*.log": true,
        "**/*.log.*": true,
        "**/*.dmg": true,
        "**/*.spec": true,
        "**/*.icns": true,
        "**/edf_developer.iconset/**": true
    },
    
    // Configuración de autocompletado y sugerencias
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    
    // Configuración de formato de archivos
    "files.associations": {
        "*.py": "python",
        "*.md": "markdown",
        "*.txt": "plaintext",
        "*.json": "json",
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "*.toml": "toml",
        "*.ini": "ini",
        "*.cfg": "ini",
        "*.conf": "ini",
        "*.sh": "shellscript",
        "*.bat": "batch",
        "*.ps1": "powershell",
        "*.spec": "python",
        "*.dockerignore": "ignore",
        "*.gitignore": "ignore"
    },
    
    // Configuración de formato automático
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    
    // Configuración específica para Python
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88",
        "--skip-string-normalization"
    ],
    
    // Configuración de linting específica
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--ignore=E203,W503,E501,F401,F403,F405"
    ],
    
    // Configuración de terminal
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/app:${workspaceFolder}/tools:${workspaceFolder}/scripts"
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/app:${workspaceFolder}/tools:${workspaceFolder}/scripts"
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/app;${workspaceFolder}/tools;${workspaceFolder}/scripts"
    }
}