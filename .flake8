[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by max-line-length)
    E501
exclude = 
    .git,
    __pycache__,
    venv*,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    .pytest_cache 