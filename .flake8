[flake8]
# Configuración de Flake8 para el proyecto EDF Catálogo de Tablas

# Longitud máxima de línea (aumentado de 79 a 120 caracteres)
max-line-length = 120

# Excluir directorios y archivos
exclude = 
    .git,
    __pycache__,
    .venv,
    node_modules,
    .mypy_cache,
    .ruff_cache,
    build,
    dist,
    *.egg-info,
    backups,
    logs,
    uploads,
    static/uploads,
    imagenes,
    exportados,
    spreadsheets

# Ignorar errores específicos
ignore = 
    F841,  # local variable is assigned to but never used
    F541,  # f-string is missing placeholders
    E722,  # do not use bare except
    B007,  # loop control variable not used within loop body
    F401,  # imported but unused
    F821,  # undefined name
    F811,  # redefinition of unused name
    B904,  # raise without from inside except
    F841,  # local variable is assigned to but never used

# Estadísticas
statistics = True
count = True

# Formato de salida
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Mostrar códigos de error
show-source = True
